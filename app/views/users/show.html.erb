<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mt-5 mb-4"><%= @user.name %></h1>

      <h2>Roles:</h2>
      <ul>
        <% @user.roles.each do |role| %>
          <li><%= role.name %></li>
        <% end %>
      </ul>
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary mr-2' %>

      <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
