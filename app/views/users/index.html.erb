<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mt-5 mb-4">Users</h1>
      <div class="mt-3">
        <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
      </div>
      <ul class="list-group mt-3">
        <% @users.each do |user| %>
          <li class="list-group-item">
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
